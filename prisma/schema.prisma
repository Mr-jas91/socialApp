generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  accounts  Account[]
  posts     Post[]
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Account {
  id        String   @id @default(cuid())
  type      String   // e.g. "facebook", "instagram", "whatsapp"
  accountId String   // meta developer API account id
  token     String   // access token from Meta
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  content   String
  platform  String   // facebook | instagram | whatsapp
  status    String   // draft | scheduled | published
  scheduledAt DateTime?
  publishedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  platform  String   // whatsapp | instagram
  content   String
  direction String   // incoming | outgoing
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}
